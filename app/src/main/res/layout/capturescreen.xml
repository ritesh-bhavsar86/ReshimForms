<?xml version="1.0" encoding="utf-8"?>
<com.riteshbhavsar.reshimforms.ScreenshottableScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_1">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/header_bg1"
            >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/header_head"
            android:textColor="@color/colorwhite"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/header_name"
                    android:textColor="@color/colorwhite"
                    android:textSize="11sp"
                    android:layout_margin="3dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/header_addr"
                    android:textColor="@color/colorwhite"
                    android:textSize="10sp"
                    android:layout_marginBottom="10dp"
                    />

            </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/header_name_1"
                        android:textColor="@color/colorwhite"
                        android:textSize="11sp"
                        android:layout_margin="2dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/header_addr_1"
                        android:textColor="@color/colorwhite"
                        android:textSize="10sp"
                        android:layout_marginBottom="10dp"
                        />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            >

            <!--left side labels-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/txt_cname_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:textStyle="bold"
                    android:lines="2"/>

                <TextView
                    android:id="@+id/txt_c_bdate_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dob"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"
                    />


                <TextView
                    android:id="@+id/txt_c_btime_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dot"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"
                    />


                <TextView
                    android:id="@+id/txt_c_bplace_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bplace"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"
                    />

                <TextView
                    android:id="@+id/txt_c_edu_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/edu"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"
                    />

                <TextView
                    android:id="@+id/txt_c_occu_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/occu"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"
                    />

                <TextView
                    android:id="@+id/txt_c_salary_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sal"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"
                    />

                <TextView
                    android:id="@+id/txt_c_fathername_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/father"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"
                    android:lines="2"
                    />

                <TextView
                    android:id="@+id/txt_c_fatheroccu_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/father_occu"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"
                    />

                <TextView
                    android:id="@+id/txt_c_kul_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/kul"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"
                    />

                <TextView
                    android:id="@+id/txt_c_mamaname_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mama"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"
                    />

                <TextView
                    android:id="@+id/txt_c_mamkul_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mamkul"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"
                    />


            </LinearLayout>
            <!--respective values-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5.0"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_cname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ritesh"
                    android:textStyle="bold"
                    android:textColor="#A10A0A"
                    android:lines="2"/>

                <TextView
                    android:id="@+id/txt_c_bdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ritesh"
                    android:textColor="#780000"
                    android:layout_marginBottom="5dp"
                    />

                <TextView
                    android:id="@+id/txt_c_btime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ritesh"
                    android:textColor="#780000"
                    android:layout_marginBottom="5dp"
                    />

                <TextView
                    android:id="@+id/txt_c_bplace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ritesh"
                    android:textColor="#780000"
                    android:layout_marginBottom="5dp"
                    />

                <TextView
                    android:id="@+id/txt_c_edu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ritesh"
                    android:textColor="#780000"
                    android:layout_marginBottom="5dp"
                    />

                <TextView
                    android:id="@+id/txt_c_occu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ritesh"
                    android:textColor="#780000"
                    android:layout_marginBottom="5dp"
                    />

                <TextView
                    android:id="@+id/txt_c_salary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ritesh"
                    android:textColor="#780000"
                    android:layout_marginBottom="5dp"
                    />

                <TextView
                    android:id="@+id/txt_c_fathername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ritesh"
                    android:textColor="#780000"
                    android:layout_marginBottom="5dp"
                    android:lines="2"
                    />

                <TextView
                    android:id="@+id/txt_c_fatheroccu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ritesh"
                    android:textColor="#780000"
                    android:layout_marginBottom="5dp"
                    />

                <TextView
                    android:id="@+id/txt_c_kul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ritesh"
                    android:textColor="#780000"
                    android:layout_marginBottom="5dp"
                    />

                <TextView
                    android:id="@+id/txt_c_mamaname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ritesh"
                    android:textColor="#780000"
                    android:layout_marginBottom="5dp"
                    />

                <TextView
                    android:id="@+id/txt_c_mamkul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ritesh"
                    android:textColor="#780000"
                    android:layout_marginBottom="5dp"
                    />


            </LinearLayout>

            <!--profile pic and id-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4.2"
                android:orientation="vertical">



                <ImageView
                    android:id="@+id/iv_candidate_pic"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="fitXY"/>
                <TextView
                    android:id="@+id/txt_c_cid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_c_blood_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/blood"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/txt_c_blood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#780000"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_c_height_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/height"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/txt_c_height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#780000"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_c_weight_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weight"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txt_c_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#780000"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_c_raas_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/raas"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/txt_c_raas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#780000"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_c_nakshatra_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nakshatra"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txt_c_nakshatra"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#780000"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_c_fcolor_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/facecolor"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txt_c_fcolor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#780000"
                        />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/txt_c_addr_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/addr"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/txt_c_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#780000"
            />

        <TextView
            android:id="@+id/txt_c_contact_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/contact"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_c_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#780000"
            />

        <TextView
            android:id="@+id/txt_c_expectation_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/expectation"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_c_expectation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#780000"
            />
    </LinearLayout>
</com.riteshbhavsar.reshimforms.ScreenshottableScrollView>