<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_1">


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_bg1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo_mdpi"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/header_head"
                    android:textColor="@color/colorwhite"
                    android:textSize="28sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:text="@string/header_name"
                        android:textColor="@color/colorwhite"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:text="@string/header_addr"
                        android:textColor="@color/colorwhite"
                        android:textSize="10sp" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:gravity="center"
                        android:text="@string/header_name_1"
                        android:textColor="@color/colorwhite"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:text="@string/header_addr_1"
                        android:textColor="@color/colorwhite"
                        android:textSize="10sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <!--left side labels-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_cname_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:text="@string/name"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_status_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="@string/stats"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_c_bdate_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="@string/dob"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/txt_c_btime_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="@string/dot"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/txt_c_bplace_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="@string/bplace"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_c_edu_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="@string/edu"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_c_occu_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:lines="2"
                    android:text="@string/occu"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_c_salary_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="@string/sal"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_c_fathername_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:lines="2"
                    android:text="@string/father"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_c_fatheroccu_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="@string/father_occu"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_c_mothername_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:lines="2"
                    android:text="@string/mothername"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_c_kul_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="@string/kul"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_c_mamaname_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:lines="2"
                    android:text="@string/mama"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_c_mamkul_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="@string/mamkul"
                    android:textStyle="bold" />


            </LinearLayout>
            <!--respective values-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5.0"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_cname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:text="Ritesh"
                    android:textColor="#A10A0A"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="status"
                    android:textColor="#780000"
                     />

                <TextView
                    android:id="@+id/txt_c_bdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Ritesh"
                    android:textColor="#780000" />

                <TextView
                    android:id="@+id/txt_c_btime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Ritesh"
                    android:textColor="#780000" />

                <TextView
                    android:id="@+id/txt_c_bplace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Ritesh"
                    android:textColor="#780000" />

                <TextView
                    android:id="@+id/txt_c_edu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Ritesh"
                    android:textColor="#780000" />

                <TextView
                    android:id="@+id/txt_c_occu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:lines="2"
                    android:text="Ritesh"
                    android:textColor="#780000" />

                <TextView
                    android:id="@+id/txt_c_salary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Ritesh"
                    android:textColor="#780000" />

                <TextView
                    android:id="@+id/txt_c_fathername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:lines="2"
                    android:text="Ritesh"
                    android:textColor="#780000" />

                <TextView
                    android:id="@+id/txt_c_fatheroccu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Ritesh"
                    android:textColor="#780000" />

                <TextView
                    android:id="@+id/txt_c_mothername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:lines="2"
                    android:text="Ritesh"
                    android:textColor="#780000" />


                <TextView
                    android:id="@+id/txt_c_kul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Ritesh"
                    android:textColor="#780000" />

                <TextView
                    android:id="@+id/txt_c_mamaname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:lines="2"
                    android:text="Ritesh"
                    android:textColor="#780000" />

                <TextView
                    android:id="@+id/txt_c_mamkul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Ritesh"
                    android:textColor="#780000" />


            </LinearLayout>

            <!--profile pic and id-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4.2"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/iv_candidate_pic"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/txt_c_cid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_c_blood_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/blood"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/txt_c_blood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#780000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_c_height_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/height"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_c_height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#780000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_c_weight_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weight"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_c_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#780000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_c_raas_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/raas"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_c_raas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#780000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_c_nakshatra_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nakshatra"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_c_nakshatra"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#780000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_c_fcolor_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/facecolor"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_c_fcolor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#780000" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_c_addr_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="5dp"
            android:text="@string/addr"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_c_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="5dp"
            android:textColor="#780000" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
            android:id="@+id/txt_c_contact_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="5dp"
            android:text="@string/contact"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_c_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="5dp"
            android:textColor="#780000" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
            android:id="@+id/txt_c_expectation_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="5dp"
            android:text="@string/expectation"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_c_expectation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="5dp"
            android:textColor="#780000" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border" />

</RelativeLayout>